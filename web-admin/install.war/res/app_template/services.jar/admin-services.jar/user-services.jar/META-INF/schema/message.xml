<schema>
    <element name="message" tablename="message">
        <field name="objid" primary="true"/>
		<field name="dtposted"/>
		<field name="userid"/>
		<field name="subject"/>
		<field name="message"/>
		<field name="msgtype"/>
		<field name="channelid"/>
		<field name="threadid"/>
		<field name="privacy"/>
    </element>
	
	<element name="subscriber" tablename="message_subscriber">
	    <field name="userid" primary="true"/>
		<field name="msgid" primary="true"/>
		<field name="state"/>
    </element>
	
	<element name="response" tablename="message_response">
	    <field name="objid"  primary="true"/>
	    <field name="dtposted"/>
	    <field name="userid"/>
		<field name="msgid" />
		<field name="message"/>
		<field name="resptype"/>
    </element>

</schema>
