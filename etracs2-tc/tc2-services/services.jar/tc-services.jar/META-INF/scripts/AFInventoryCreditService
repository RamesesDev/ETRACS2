import com.rameses.annotations.*
import com.rameses.common.*

class AFInventoryCreditService
{
	@PersistenceContext('main')
	def em
	
	@Service('ETRACSUtilService')
	def util
	
	@Service('LogService')
	def logService
	
	@ProxyMethod
	public def getList( searchText, docstate ) {
		if( !searchText ) return getListByQuery( 'afinventorycredit:getList', [:] );
		def result = [];
		if( docstate == 'ALL' ){
			if((result = getListByQuery( 'afinventorycredit:getListByAfId', [afid:searchText] ))) return result;
			if((result = getListByQuery( 'afinventorycredit:getListByAfType', [aftype:searchText] ))) return result;
			if((result = getListByQuery( 'afinventorycredit:getListByAfUnit', [afunit:searchText] ))) return result;
			if((result = getListByQuery( 'afinventorycredit:getListByStartSeries', [startseries:searchText + "%"]))) return result;
		}else{
			if((result = getListByQuery( 'afinventorycredit:getListByAfIdState', [docstate:docstate, afid:searchText] ))) return result;
			if((result = getListByQuery( 'afinventorycredit:getListByAfTypeState', [docstate:docstate, aftype:searchText] ))) return result;
			if((result = getListByQuery( 'afinventorycredit:getListByAfUnitState', [docstate:docstate, afunit:searchText] ))) return result;
			if((result = getListByQuery( 'afinventorycredit:getListByStartSeriesState', [docstate:docstate, startseries:searchText + "%"]))) return result;

		}
		return result;
	}
	
	@ProxyMethod
	public def getListByDocState( docstate ){
		if( docstate == 'ALL' ) return getListByQuery( 'afinventorycredit:getList', [:] );
		else return em.sqlContext.createNamedQuery( 'afinventorycredit:getListByState' ).setParameter( "docstate", docstate ).resultList;
	}
	
	@ProxyMethod
	public def getSummaryList(){
		return em.sqlContext.createNamedQuery( 'afinventorycredit:getSummaryList' ).resultList;
	}
	
	private def getListByQuery(namedQuery, values) {
		return em.sqlContext.createNamedQuery( namedQuery ).setParameters(values).resultList
	}
	
}
