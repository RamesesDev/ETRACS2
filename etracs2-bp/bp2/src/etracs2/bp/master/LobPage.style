"entity.*|searchAttribute|attribute" [mode == 'view'] {
    readonly:true;
}

"entity.*|searchAttribute|attribute" [mode != 'view'] {
    readonly:false;
}

"entity.name" [ mode != 'view' && entity.docstate == 'APPROVED' ]{
    readonly:true;
}

"selectedItem|searchText" [mode == 'view'] {
    enabled:true;
}

"selectedItem|searchText" [mode != 'view'] {
    enabled:false;
}

