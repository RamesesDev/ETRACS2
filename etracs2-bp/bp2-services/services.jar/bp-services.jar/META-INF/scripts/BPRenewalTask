import com.rameses.annotations.*
import com.rameses.common.*
import java.rmi.server.UID

class BPRenewalTask
{
	@PersistenceContext('main')
	def em
	
	@Service("DateService")
	def dtSvc;
	
	@ProxyMethod
	public void updateExpiredApplication( task ){
		def param = [:]
		param.currentYr = dtSvc.getServerYear()
		
		em.sqlContext.createNamedExecutor("bprenwal:updatebusiness").setParameter('currentYr', param.currentYr ).execute()
		em.sqlContext.createNamedExecutor("bprenwal:updatebpapplication").setParameter('currentYr', param.currentYr ).execute()
		em.sqlContext.createNamedExecutor("bprenwal:updatebpapplicationlisting").setParameter('currentYr', param.currentYr ).execute()
	}
	
}
