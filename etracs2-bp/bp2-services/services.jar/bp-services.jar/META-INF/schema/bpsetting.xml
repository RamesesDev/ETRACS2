<schema>
	<element name="bpsetting" table="bpsetting">
		<field name="objid" primary="true"/>
		
		<complex name="assessmentsignatories"  ref="signatory"   type="list" required="false"/>
		<complex name="applicationsignatories" ref="signatory"   type="list" required="false"/>
		<complex name="requirements"           ref="requirement" type="list" required="false"/>
	</element>
	
	<element name="signatory">
		<field name="index" required="true"/>
		<field name="name" required="true"/>
		<field name="department" required="true"/>
		<field name="title" required="true"/>
	</element>
	
	<element name="requirement">
		<field name="requirement"/>
		<field name="complied" type="boolean"/>
		<field name="remarks"/>
	</element>
</schema>