<schema>
	<element name="bpapplication" tablename="bpapplication" >
		<field name="objid" primary="true"/>
		<field name="schemaname" required="true" />
		<field name="schemaversion" required="true" />
		<field name="docstate" required="true" />
		<field name="taxpayerid" required="true" />
		<field name="txntype" required="true"/>
		<field name="txndate" required="true"/>
		<field name="txnno" required="true"/>
		<field name="txnmode" required="true"/>
		<field name="tradename" required="true" />
		<field name="businessaddress" required="true" />
		<field name="iyear" required="true"/>
		<field name="businessid"/>
		<complex name="info" ref="bpinfo" serializer="default"/>
	</element>
	
	<element name="bpinfo">
		<field name="taxpayerid" required="true" />
		<field name="taxpayername" required="true" />
		<field name="taxpayeraddress" required="true" />
		<field name="tradename" required="true" />
		<field name="businessaddress" required="true" />
		<field name="tin"/>
		<field name="bin"/>
		<field name="pin"/>
		<field name="officetype"/>
		<field name="organization"/>
		<field name="ctcno"/>
		<field name="ctcplaceissued"/>
		<field name="ctcdateissued"/>
		<field name="administratorname"/>
		<field name="administratoraddress"/>
		<complex name="barangay" ref="barangay"/>
		<complex name="lobs" ref="lob" type="list"/>
		<complex name="appinfos" ref="appinfo" type="list" required="false"/>
		<complex name="taxfees" ref="taxfee" type="list" required="false"/>
		<complex name="applicationsignatories" ref="signatory" type="list" required="false"/>
		<complex name="assessmentsignatories"  ref="signatory" type="list" required="false"/>
	</element>
	
	<element name="barangay">
		<field name="barangayid"/>
		<field name="barangayname"/>
	</element>
	
	<element name="lob">
		<field name="lobid"/>
		<field name="name"/>
		<field name="iyear"/>
		<field name="assessmenttype"/>
	</element>
	
	<element name="appinfo">
		<field name="lobid"/>
		<field name="varid"/>
		<field name="varname"/>
		<field name="vartype"/>
		<field name="value"/>
		<field name="arrayvalue"/>
	</element>
	
	<element name="taxfee">
		<field name="acctid"/>
		<field name="acctno"/>
		<field name="accttitle"/>
		<field name="assessedvalue" type="decimal"/>
		<field name="amountdue" type="decimal"/>
	</element>
	
	<element name="requirement">
		<field name="requirement"/>
		<field name="complied" type="boolean"/>
		<field name="remarks"/>
	</element>
	
	<element name="signatory">
		<field name="name"/>
		<field name="title"/>
		<field name="department"/>
	</element>
</schema>
