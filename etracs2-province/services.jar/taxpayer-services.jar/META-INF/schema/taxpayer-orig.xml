<schema>
	<element name="provinceTaxpayer" tablename="province_taxpayer">
		<link ref="taxpayerInfo"/>
	</element>
	
	<element name="municipalTaxpayer" tablename="municipal_taxpayer">
		<link ref="taxpayerInfo"/>
		<field name="provTaxpayerId" />
		<field name="provTaxpayerNo" />
		<field name="provTaxpayerName" />
		<field name="provTaxpayerAddress" />
	</element>

	<element name="taxpayerInfo">
		<field name="objid" primary="true"/>
		<field name="state" required="true"/>
		<field name="lgu" required="true" />
		<field name="taxpayerNo" required="true" />
		<field name="name" required="true"/>
		<field name="address" required="true"/>
		<field name="mailingAddress" >
		<field name="type" required="true"/>
		<complex name="homeAddress" ref="address" serializer="default" />
		<complex name="mailAddress" ref="address" required="false" serializer="default" />
		<complex name="info" ref="${type}" required="true" serializer="default"/>
	</element>
	
	<field name="individual">
		<field name="lastName" required="true"/>
		<field name="firstName" required="true"/>
		<field name="middleName" />
	</field>
	
	<field name="juridical">
		<field name="organizationType" />
	</field>
	
	<field name="multiple">
		<field name="completeName" />
		<field name="items" ref="multipleItem" serializer="default" type="list"/>
	</field>
	
	<field name="multipleItem">
		<field name="objid" primary="true"/>
		<field name="lineNo" type="integer" required="true" />
		<field name="taxpayerId" required="true"/>
		<field name="name" required="true"/>
		<field name="address" required="true"/>
		<field name="prefix" />
		<field name="suffix" />
	</field>
	
	<element name="address" >
		<field name="houseno"/>
		<field name="street1" />
		<field name="street2" />
		<field name="cityMuni" required="true"/>
		<field name="province" required="true"/>
	</element>
</schema>