<schema>
	<element name="province" tablename="lgu">
		<link ref="lguInfo"/>		
		<field name="schemaName" required="true"/>
		<field name="schemaVersion" required="true"/>
		<field name="type" required="true" default="province" />
		<complex name="municipalities" ref="municipality" type="list" serializer="default" />
	</element>
	
	<element name="municipality">
		<link ref="lguInfo"/>		
		<field name="type" required="true" default="municipality" />
		<complex name="barangays" ref="barangay" type="list" serializer="default"/>
	</element>
	
	<element name="barangay">
		<link ref="lguInfo"/>		
		<field name="type" required="true" default="barangay" />
	</element>
	
	<element name="lguInfo">
		<field name="objid" primary="true"/>
		<field name="indexNo" required="true"/>
		<field name="pin" required="true" />
		<field name="name" required="true"/>
		<field name="formalName" required="true"/>
	</element>
	
	
</schema>