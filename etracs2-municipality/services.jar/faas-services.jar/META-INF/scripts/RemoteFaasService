import com.rameses.annotations.*;

public class RemoteFaasService {

	@Service("OldETRACSService")
	def oldService;
	
	@ProxyMethod
	@Async(type="topic")
	public def approve( params ) {
		if ( ! acceptMsg( params ) ) return null;
		oldService.approveTaxDeclaration( params );
		return null;
	}
	
	@ProxyMethod
	public def findLedgerByTdId2( params ) {
		if ( ! acceptMsg( params ) ) return null;
		return oldService.invokeRPTService( params );
	}
	
	private def acceptMsg( params ) {
		return true;
		return ( params.DOMAIN == var.lgu_name );
	}

}
